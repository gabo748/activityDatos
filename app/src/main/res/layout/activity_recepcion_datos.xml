<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRecepcionDatos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fototop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ufg_2"
        android:adjustViewBounds="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tituloufg"
        android:text="UNIVERSIDAD FRANCISCO GAVIDIA"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:layout_below="@id/fototop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtituloufgufg"
        android:text="Registro de nuevo estudiante"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:layout_below="@id/tituloufg"
        />

        <TextView
            android:id="@+id/datos_ingresados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Los datos ingresados son:"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/subtituloufgufg"/>

        <TextView
            android:id="@+id/lbl_nombres_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/datos_ingresados"/>

        <TextView
            android:id="@+id/lbl_apellidos_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/lbl_nombres_result"/>

        <TextView
            android:id="@+id/lbl_email_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/lbl_apellidos_result"/>

        <Button
            android:id="@+id/btn_salir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALIR"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lbl_email_result"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>